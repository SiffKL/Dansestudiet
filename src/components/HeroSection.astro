---
import Button from "../components/Button.astro";
import ButtonSecundary from "./ButtonSecundary.astro";
---

<section class="gridcontainer">
  <section class="section1">
    <div class="backgroundimg"></div>
    <div class="H1-CTA">
      <h1>Dansestudiet</h1>

      <Button />
      <ButtonSecundary />
    </div>
    <h2 class="h2Section1">Jazz</h2>
  </section>
  <section class="section2"><h2>Moderne</h2></section>
  <section class="section3"><h2>House</h2></section>
</section>

<style>
  .backgroundimg {
    background-image: url("../asset/images/heroPic.webp");
    position: absolute;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  h1 {
    color: var(--headers-color, --light-grey-100);
    font-family: DansestudietDisplay1;
    font-size: var(--header-100, --fontsize-xxl);
    font-weight: 700;
    margin-bottom: var(--text-margin-button, --primitive-spacing-xs);
  }
  .H1-CTA {
    position: absolute;
    top: 40%;
    left: 20%;
  }
  h2 {
    color: var(--headers-color, --light-grey-100);
    font-family: DansestudietDisplay1;
    font-size: 2rem;
    position: absolute;
    top: 80%;
    left: 10%;
  }
  .h2Section1 {
    color: var(--headers-color, --light-grey-100);
    font-family: DansestudietDisplay1;
    font-size: 2rem;
    position: absolute;

    top: 80%;
    left: 80%;
  }

  .gridcontainer {
    height: 100vh;
    width: 100vw;
    display: grid;
    grid-template-columns: 70% 15% 15%;
    grid-auto-flow: column;
  }

  .section1 {
    width: 100%;
    position: relative;
  }

  .section2 {
    position: relative;
    background-color: var(--section-yellow-slide-background, #ffdf4c);
    background-image: url("../asset/images/yellowslide.webp");
    background-size: cover;
  }

  .section2::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 15%;
    height: 100%;
    background: linear-gradient(to left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7));
    z-index: 1;
  }

  .section3 {
    position: relative;
    background-color: var(--section-blue-slide-background, #176672);
    background-image: url("../asset/images/blueslide.webp");
    background-size: cover;
  }

  .section3::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 15%;
    height: 100%;
    background: linear-gradient(to left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7));
    z-index: 1;
  }
</style>
